<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cm_mod_custom" parent="@android:style/Theme.Material" >
        <item name="android:colorPrimary">@color/cm_colorPrimary</item>
        <item name="android:windowBackground">@color/cm_windowBackground</item>
        <item name="android:actionBarStyle">@style/cm_mod_custom.ActionBarStyle</item>
        <item name="android:textColorPrimary">@color/cm_textColor</item>
    </style>

    <style name="cm_mod_custom.ActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/cm_colorPrimary</item>
        <item name="android:titleTextStyle">@style/cm_mod_custom.ActionBar.TitleTextStyle</item>
    </style>

    <style name="cm_mod_custom.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/cm_text_colorPrimary</item>
    </style>

</resources>
