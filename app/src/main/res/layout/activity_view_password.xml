<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.steve.strongpass.ViewPassword">


    <TextView
        android:text="@string/accountUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_username"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        />

    <TextView
        android:text="foo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_usernameClick"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:layout_toRightOf="@id/accountDetails_username"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        />

    <TextView
        android:text="@string/accountPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_password"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:layout_below="@id/accountDetails_username"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:text="foo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_passwordClick"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/accountDetails_password"
        android:layout_alignBottom="@+id/accountDetails_password"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/accountDetails_username" />

    <TextView
        android:text="@string/accountDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_description"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:layout_below="@id/accountDetails_password"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:text="foo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_descriptionClick"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/accountDetails_description"
        android:layout_alignBottom="@+id/accountDetails_description"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/accountDetails_description"
        />

    <TextView
        android:text="@string/additionalInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accountDetails_info"
        android:textAppearance="@style/cm_mod_custom.ActionBar.TitleTextStyle"
        android:textColor="@color/cm_textColor"
        android:layout_below="@id/accountDetails_description"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
